REDIS_MASTER=lbmaster
REDIS_SENTINEL_NODES=redis-sentinel-1:26379,redis-sentinel-2:26379,redis-sentinel-3:26379
REDIS_TIMEOUT=10s
REDIS_READ_FROM=REPLICA_PREFERRED

KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP_ID=leaderboard-group
KAFKA_CONSUMER_MAX_POLL_RECORDS=500
KAFKA_CONSUMER_ENABLE_AUTO_COMMIT=false
KAFKA_CONSUMER_AUTO_OFFSET_RESET=earliest
KAFKA_SCHEMA_REGISTRY_URL=http://schema-registry:8081

SERVER_PORT=8000

LOG_LEVEL_COM_PMS_LEADERBOARD=DEBUG
LOG_LEVEL_COM_PMS_LEADERBOARD_SERVICES=INFO

BACKEND_IMAGE=kanishkapriya/pms-leaderboard-backend
IMAGE_TAG=latest


